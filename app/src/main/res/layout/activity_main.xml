<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <TextView
        android:id="@+id/txt_result"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:text="0"
        android:textColor="#ffffff"
        android:gravity="bottom|right"
        android:textSize="90dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_below="@id/txt_result">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_ac"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="2"
                android:background="@drawable/style_button1"
                android:text="AC"
                android:textSize="30sp"
                android:textColor="#ffffff"/>
            <Button
                android:id="@+id/btn_plus_mines"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="2"
                android:background="@drawable/style_button1"
                android:text="+/-"
                android:layout_marginLeft="10dp"
                android:textSize="30sp"
                android:onClick="OnClickBtn"
                android:textColor="#ffffff"/>
            <Button
                android:id="@+id/btn_perc"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="2"
                android:background="@drawable/style_button1"
                android:text="%"
                android:layout_marginLeft="10dp"
                android:textSize="30sp"
                android:textColor="#ffffff"/>
            <Button
                android:id="@+id/btn_div"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="2"
                android:text="รท"
                android:layout_marginLeft="10dp"
                android:background="@drawable/style_button2"
                android:textSize="30sp"
                android:textColor="#ffffff"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">
            <Button
                android:id="@+id/btn_seven"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="2"
                android:background="@drawable/style_button3"
                android:text="7"
                android:textSize="30sp"
                android:textColor="#ffffff"/>
            <Button
                android:id="@+id/btn_eight"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="2"
                android:background="@drawable/style_button3"
                android:text="8"
                android:layout_marginLeft="10dp"
                android:textSize="30sp"
                android:textColor="#ffffff"/>
            <Button
                android:id="@+id/btn_nine"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="2"
                android:background="@drawable/style_button3"
                android:text="9"
                android:layout_marginLeft="10dp"
                android:textSize="30sp"
                android:textColor="#ffffff"/>
            <Button
                android:id="@+id/btn_multi"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="2"
                android:text="ร"
                android:layout_marginLeft="10dp"
                android:background="@drawable/style_button2"
                android:textSize="30sp"
                android:textColor="#ffffff"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">
            <Button
                android:id="@+id/btn_four"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="2"
                android:background="@drawable/style_button3"
                android:text="4"
                android:textSize="30sp"
                android:textColor="#ffffff"/>
            <Button
                android:id="@+id/btn_five"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="2"
                android:background="@drawable/style_button3"
                android:text="5"
                android:layout_marginLeft="10dp"
                android:textSize="30sp"
                android:textColor="#ffffff"/>
            <Button
                android:id="@+id/btn_six"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="2"
                android:background="@drawable/style_button3"
                android:text="6"
                android:layout_marginLeft="10dp"
                android:textSize="30sp"
                android:textColor="#ffffff"/>
            <Button
                android:id="@+id/btn_mines"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="2"
                android:text="-"
                android:layout_marginLeft="10dp"
                android:background="@drawable/style_button2"
                android:textSize="30sp"
                android:textColor="#ffffff"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">
            <Button
                android:id="@+id/btn_one"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="2"
                android:background="@drawable/style_button3"
                android:text="1"
                android:textSize="30sp"
                android:textColor="#ffffff"/>
            <Button
                android:id="@+id/btn_two"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="2"
                android:background="@drawable/style_button3"
                android:text="2"
                android:layout_marginLeft="10dp"
                android:textSize="30sp"
                android:textColor="#ffffff"/>
            <Button
                android:id="@+id/btn_three"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="2"
                android:background="@drawable/style_button3"
                android:text="3"
                android:layout_marginLeft="10dp"
                android:textSize="30sp"
                android:textColor="#ffffff"/>
            <Button
                android:id="@+id/btn_plus"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="2"
                android:text="+"
                android:layout_marginLeft="10dp"
                android:background="@drawable/style_button2"
                android:textSize="30sp"
                android:textColor="#ffffff"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/btn_zero"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="4"
                android:background="@drawable/style_button_zero"
                android:text="0"
                android:layout_marginLeft="10dp"
                android:textSize="30sp"
                android:textColor="#ffffff"/>
            <Button
                android:id="@+id/btn_dot"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="2"
                android:background="@drawable/style_button3"
                android:text="."
                android:layout_marginLeft="10dp"
                android:textSize="30sp"
                android:textColor="#ffffff"/>
            <Button
                android:id="@+id/btn_result"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="2"
                android:text="="
                android:layout_marginLeft="10dp"
                android:background="@drawable/style_button2"
                android:textSize="30sp"
                android:textColor="#ffffff"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>